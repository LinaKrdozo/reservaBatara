<!DOCTYPE html>
<html lang="es">
<head>
     <!--head partial-->
     <%- include('../partials/head', {css:'/css/detalleReserva.css'}); %>
     <!--fin partial-->
</head>
<body>
    <main>
      
    <%- include('../partials/header'); %>
    <section class="principal__section section--migadepan">
      <div class="contenedor contenedor--migadepan">
         <%- include('../partials/migaDePan', {local: 'detalle usuarios'}); %> 
      </div>
    </section>
  <!--CONTENIDO-->
  <section class="detalle-reserva">
    <div class="card">
        <h2>Detalles del usuario</h2>
        <p><strong>ID Usuario:</strong><%= usuario.idUsuario %></p>
        <p><strong>Nombre:</strong> <%= usuario.nombreCompleto %></p>
        <p><strong>correo:</strong><%= usuario.correo %></p>
        <p><strong>tel√©fono:</strong> <%= usuario.telefono %></p>
        <% if (usuario.residente === 1) { 
          usuario.residente = "si"; 
        %>
        <p><strong>apartamento:</strong> <%= usuario.apartamento %></p>
        <% 
        } else if (usuario.residente === 0) { 
          usuario.residente = "no"; 
          usuario.apartamento = "no es residente"; 
        %>
        <p><strong>apartamento:</strong> <%= usuario.apartamento %></p>
        <% } %>
        <p><strong>Foto de perfil:</strong></p>
          <img src="/<%= usuario.foto %>" alt="Foto" class="detalle-reserva__foto">
        <p><strong>Rol:</strong> <%= usuario.nombreRol %></p>
        <div class="actions">
          <a href="/usuarios" class="confirm">Confirmar</a>
      </div>
    </div>
</section>
  <!--FIN CONTENIDO-->
</main>
    <%- include('../partials/footer'); %>
  </body>
</html>
