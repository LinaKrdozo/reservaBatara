<!DOCTYPE html>
<html lang="es">
<head>
     <!--head partial-->
     <%- include('../partials/head', {css:'/css/detalleReserva.css'}); %>
     <!--fin partial-->
</head>
<body>
    <main>
      
    <%- include('../partials/header'); %>
    <section class="principal__section section--migadepan">
      <div class="contenedor contenedor--migadepan">
         <%- include('../partials/migaDePan', {local: 'detalle reservas'}); %> 
      </div>
    </section>
  <!--CONTENIDO-->
  <section class="detalle-reserva">
    <div class="card">
        <h2>Detalles de Reserva</h2>
        <p><strong>ID Reserva:</strong><%= reserva.idReserva %></p>
        <p><strong>usuario asociado:</strong><%= usuario.correo %></p>
        <p><strong>Fecha de Reserva:</strong><%= reserva.fecha_reserva %></p>
        <p><strong>Fecha de Evento:</strong><%= reserva.fecha_evento %></p>
        <p><strong>Tipo de Evento:</strong><%= reserva.tipo_evento %></p>
        <p><strong>Asistentes:</strong> <%= detalleReserva.asistentes %></p>
        <p><strong>Descripcion:</strong> <%= detalleReserva.descripcion %></p>
        <p><strong>Foto del pago:</strong></p><img src="/<%= detalleReserva.foto_pago %>" alt="Foto del Pago" class="detalle-reserva__foto">
        <p><strong>Disponibilidad:</strong> <%= reserva.disponibilidad %></p>
        <div class="actions">
          <a href="/reservas" class="confirm">Volver atras</a>
      </div>
    </div>
</section>
  <!--FIN CONTENIDO-->
</main>
    <%- include('../partials/footer'); %>
  </body>
</html>
