<!DOCTYPE html>
<html lang="es">
<head>
     <!--head partial-->
     <%- include('../partials/head', {css:'/css/detalleReserva.css'}); %>
     <!--fin partial-->
</head>
<body>
    <main>
      
    <%- include('../partials/header'); %>
    <section class="principal__section section--migadepan">
      <div class="contenedor contenedor--migadepan">
         <%- include('../partials/migaDePan', {local: 'detalle reservas'}); %> 
      </div>
    </section>
  <!--CONTENIDO-->
  <section class="detalle-reserva">
    <div class="card">
        <h2>Detalles de Reserva</h2>
        <p><strong>Nombre del Huésped:</strong> Juan Pérez</p>
        <p><strong>ID Reserva:</strong><%= reserva.id %></p>
        <p><strong>Fecha de Reserva:</strong><%= reserva.fechaReserva %></p>
        <p><strong>Asistentes:</strong> <%= reserva.asistentes %></p>
        <p><strong>Descripcion:</strong> <%= reserva.descripcion %></p>
        <% if (reserva.disponibilidad === 'confirmada') { %>
          <p><strong>Foto del pago:</strong></p>
          <img src="/<%= reserva.fotoPago %>" alt="Foto del Pago" class="detalle-reserva__foto">
      <% } %>
        <p><strong>Cantidad de horas:</strong> <%= reserva.cantidadHora %></p>
        <p><strong>Disponibilidad:</strong> <%= reserva.disponibilidad %></p>
        <div class="actions">
          <a href="/admin" class="confirm">Confirmar</a>
      </div>
    </div>
</section>
  <!--FIN CONTENIDO-->
</main>
    <%- include('../partials/footer'); %>
  </body>
</html>
