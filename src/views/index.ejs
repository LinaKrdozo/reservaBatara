              <ol class="pagination" id="pagination">
    
              </ol>
            </div>
          </div>

        <section class="informacion">
            <div class="informacion__card">
                <div class="informacion__icono">
                    <i class="fa-solid fa-car"></i>
                </div>
                <h4 class="informacion__numero">0</h4>
                <p class="informacion__descripcion">Parqueaderos privados</p>
            </div>
            <div class="informacion__card">
                <div class="informacion__icono">
                    <i class="fa-solid fa-building"></i>
                </div>
                <h4 class="informacion__numero">0</h4>
                <p class="informacion__descripcion">Apartamentos</p>
            </div>
            <div class="informacion__card">
                <div class="informacion__icono">
                    <i class="fa-solid fa-car"></i>
                </div>
                <h4 class="informacion__numero">0</h4>
                <p class="informacion__descripcion">Parqueaderos visitantes</p>
            </div>
        </section>

        <section class="caracteristicas">
            <% anuncios.forEach(anuncio => { %>
                <%- include('./partials/anuncios', { anuncio: anuncio }); %>
            <% }); %>
        </section>
        
        <section class="juntaAdministradora">
            <h2 class="juntaAdministradora__titulo">Junta Administradora</h2>
            <div class="juntaAdministradora__lista">
                <% junta.forEach(junta => { %>
                    <%- include('./partials/junta', { junta: junta }); %>
                <% }); %>
            </div>
        </section>
        
    </main>
    <%- include('./partials/footer'); %>
    <script src="js/slider.js"></script>
    <script src="js/scriptIndex.js"></script> 
</body>
</html>
